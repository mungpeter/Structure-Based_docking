## if "ligand name" has '::' due to previous rdkit processing, remove the
## added data and just the "name" again
def RenameSDF(sdfs):
  NewData = []
  for mol in sdfs:
    name = mol.GetProp('_Name')
    mol.SetProp('_Name', name.split('::')[0])
    NewData.append(mol)
  return NewData


